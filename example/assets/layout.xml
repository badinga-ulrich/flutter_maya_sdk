<Column mainAxisAlignment="center">
    <for count="$counter">
        <Text>$item, You have pushed the button this many times:</Text>
        <if candidate="equal(1, mod($item, 2))">
            <Text>Test2</Text>
        </if>
    </for>
    <Text id="text-id">
        <style>
            <TextStyle color="red"/>
        </style>
        $counter
    </Text>
    <Icon color="blue">airport_shuttle</Icon>
</Column>